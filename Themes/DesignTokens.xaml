<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Design System: Dead Daily Dose â€” token-based theme -->

    <!-- Palette: warm dark theme (music-app) -->
    <Color x:Key="ColorBackground">#1a1b1e</Color>
    <Color x:Key="ColorSurface">#25262a</Color>
    <Color x:Key="ColorSurfaceRaised">#2d2e33</Color>
    <Color x:Key="ColorBorder">#3d3e44</Color>
    <Color x:Key="ColorBorderSubtle">#2d2e33</Color>
    <Color x:Key="ColorTextPrimary">#e8e9ec</Color>
    <Color x:Key="ColorTextSecondary">#9a9ca3</Color>
    <Color x:Key="ColorTextMuted">#6b6d74</Color>
    <Color x:Key="ColorAccent">#c9a227</Color>
    <Color x:Key="ColorAccentHover">#dbb42e</Color>
    <Color x:Key="ColorAccentMuted">#8a7220</Color>
    <Color x:Key="ColorSuccess">#5a9b6e</Color>
    <Color x:Key="ColorError">#c45c5c</Color>

    <SolidColorBrush x:Key="BrushBackground" Color="{StaticResource ColorBackground}"/>
    <SolidColorBrush x:Key="BrushSurface" Color="{StaticResource ColorSurface}"/>
    <SolidColorBrush x:Key="BrushSurfaceRaised" Color="{StaticResource ColorSurfaceRaised}"/>
    <SolidColorBrush x:Key="BrushBorder" Color="{StaticResource ColorBorder}"/>
    <SolidColorBrush x:Key="BrushBorderSubtle" Color="{StaticResource ColorBorderSubtle}"/>
    <SolidColorBrush x:Key="BrushTextPrimary" Color="{StaticResource ColorTextPrimary}"/>
    <SolidColorBrush x:Key="BrushTextSecondary" Color="{StaticResource ColorTextSecondary}"/>
    <SolidColorBrush x:Key="BrushTextMuted" Color="{StaticResource ColorTextMuted}"/>
    <SolidColorBrush x:Key="BrushAccent" Color="{StaticResource ColorAccent}"/>
    <SolidColorBrush x:Key="BrushAccentHover" Color="{StaticResource ColorAccentHover}"/>
    <SolidColorBrush x:Key="BrushAccentMuted" Color="{StaticResource ColorAccentMuted}"/>
    <SolidColorBrush x:Key="BrushSuccess" Color="{StaticResource ColorSuccess}"/>
    <SolidColorBrush x:Key="BrushError" Color="{StaticResource ColorError}"/>

    <!-- Typography -->
    <FontFamily x:Key="FontFamilyPrimary">Segoe UI, sans-serif</FontFamily>
    <FontFamily x:Key="FontFamilyMono">Consolas, Segoe UI, sans-serif</FontFamily>

    <!-- Spacing (padding/margin) -->
    <Thickness x:Key="SpacingXs">2</Thickness>
    <Thickness x:Key="SpacingSm">4</Thickness>
    <Thickness x:Key="SpacingMd">8</Thickness>
    <Thickness x:Key="SpacingLg">12</Thickness>
    <Thickness x:Key="SpacingXl">16</Thickness>
    <Thickness x:Key="Spacing2Xl">24</Thickness>

    <!-- Radii -->
    <CornerRadius x:Key="RadiusSm">4</CornerRadius>
    <CornerRadius x:Key="RadiusMd">6</CornerRadius>
    <CornerRadius x:Key="RadiusLg">8</CornerRadius>
</ResourceDictionary>
